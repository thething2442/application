{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JS output
    "module": "CommonJS",                        // For Node.js
    "rootDir": "src",                            // Source folder
    "outDir": "dist",                            // Build output
    "strict": true,                              // Enable strict type checking
    "esModuleInterop": true,                     // Allows import of CommonJS modules
    "forceConsistentCasingInFileNames": true,   // File name case consistency
    "skipLibCheck": true,                        // Skip type checks for node_modules
    "resolveJsonModule": true,                   // Import JSON modules
    "noImplicitAny": false                        // Optional, can relax strictness
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
